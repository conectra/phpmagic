{
  "name": "conectra/phpmagic",
  "description": "The Expressive magic package",
  "license": "MIT",
  "authors": [
    {
      "name": "Rafael Becker",
      "email": "rafael@beecker.com.br"
    }
  ],
  "require": {
    "php": ">=7.0",
    "conectra/phpbreaker": "~v1.0",
    "conectra/phpschema": "~v1.0"
  },
  "autoload": {
    "psr-4": {
      "Solis\\Expressive\\Magic\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solis\\Expressive\\Magic\\Sample\\": "sample"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests/",
    "sniff": "vendor/bin/phpcs --standard=psr2 src/",
    "fix-sniff": "vendor/bin/phpcbf --standard=psr2 src/"
  }
}
